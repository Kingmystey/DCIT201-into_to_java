import java.util.InputMismatchException;
import java.util.Scanner;

//TIP To <b>Run</b> code, press <shortcut actionId="Run"/> or
// click the <icon src="AllIcons.Actions.Execute"/> icon in the gutter.
public class TemperatureConverter {
    //function to convert celsius to Fahrenheit
    public static double celsiusToFahrenheit(double celsiusValue){
        double Fahrenheit = (celsiusValue * (double)9/5 + 32);
        return Fahrenheit;

    }


    //function to convert Fahrenheit to  celsius
    public static double fahrenheitToCelsius(double fahrenheitValue){
        double celsius = ((double)( fahrenheitValue - 32)) *  5.0/9.0 ;
        return Math.round(celsius * 10.0)/10.0;

    }
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        //Displays options for user to choose
        System.out.println("Welcome to the Temperature Converter! \n " +
                "CHOOSE AN OPTION \n" +
                "1.Convert celsius to fahrenheit\n" +
                "2.Convert  fahrenheit to celsius\n");

        int option = scanner.nextInt();
        //Ensure valid user from user
        while (option != 1 && option != 2) {
            System.out.println("Option Invalid , choose from either 1 or 2");
            option = scanner.nextInt();
        }

            if (option == 1) {
                //To handle program from crashing


                    System.out.println("Enter temperature value in celcius ");

                    //Take input from user in celsius
                    double celsius = scanner.nextDouble();

                    //Calls celsiusToFahrenheit function
                    double covertedValue = celsiusToFahrenheit(celsius);

                    //Displays result for user in fahrenheit
                    System.out.println(celsius + "°C" + " is " + covertedValue + " in Fahrenheit");



            }else if (option == 2){

                    System.out.println("Enter temperature value in fahrenheit ");
                    //Take input from user in fahrenheit
                    double fahrenheit = scanner.nextDouble();

                    //Calls fahrenheitToCelsius function
                    double convertedValue = fahrenheitToCelsius(fahrenheit);

                    //Displays result for user in celsius
                    System.out.println(fahrenheit+"°F" + " is " + convertedValue + " in Celsius" );


                    }

                }
        }



